{% extends 'default_frame.twig' %}

{% set mypageno = 'withdraw' %}

{% set body_class = 'mypage' %}

{% block main %}
	<style>
		.ec-layoutRole .ec-layoutRole__contents {
			padding: 4.5rem 0;
		}

		@media only screen and(max-width: 768px) {
			.ec-layoutRole .ec-layoutRole__contents {
				padding: 6.5rem 0;
			}
		}
	</style>


	<div class="ec-layoutRole__main">
		<div class="ec-mypageRole">
			<div class="ec-pageHeader">
				<p class="underpage-heading-title">MY PAGE</p>

				<h1 class="underpage-heading">{{ 'マイページ'|trans }}/{{ '退会手続き'|trans }}</h1>
			</div>
		</div>
		<div class="ec-mypageRole">
			<div class="ec-withdrawCompleteRole">
				<div class="ec-off4Grid">
					<div class="ec-off4Grid__cell">
						<div class="ec-reportHeading">
							<h2>{{ '退会が完了いたしました'|trans }}</h2>
						</div>
						<p class="ec-reportDescription">{{ 'ご利用いただき誠にありがとうございました。
またのご来店をお待ちしております。
'|trans|nl2br }}</p>
						<p>
							<a href="{{ url('homepage') }}" class="ec-blockBtn--cancel">{{ 'トップページへ'|trans }}</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}